{{>layouts/header}}
{{#hospital}}
    <form class="container" action="/hospitals/{{id}}/update" method="post">
        <h2>Edit Page</h2>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Name</label>
            <input type="text" class="form-control" name="hospitalName" id="exampleInputEmail1" aria-describedby="hospitalName" value="{{hospitalName}}">
            <div id="emailHelp" class="form-text">병원명을 수정해주세요.</div>
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Address</label>
            <input type="text" class="form-control" name="roadNameAddress" id="exampleInputPassword1" value="{{roadNameAddress}}">
            <div id="emailHelp" class="form-text">도로명주소를 수정해주세요.</div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-primary" href="/hospitals/{{id}}" role="button">Back</a>
        <a class="btn btn-primary" href="/hospitals/" role="button">List</a>
    </form>
{{/hospital}}
{{>layouts/footer}}