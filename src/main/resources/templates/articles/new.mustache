{{>layouts/header}}
<form class="container" action="/articles" method="post">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">제목</label>
        <input type="text" class="form-control" name="title" id="exampleInputEmail1" aria-describedby="title">
        <div id="emailHelp" class="form-text">글 제목을 입력하세요.</div>
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">내용</label>
        <input type="text" class="form-control" name="content" id="exampleInputPassword1">
        <div id="emailHelp" class="form-text">글 내용을 입력하세요.</div>
    </div>
    <button type="submit" class="btn btn-primary">작성 완료</button>
    <a class="btn btn-primary" href="list" role="button">목록</a>
</form>
